{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "dependencies": {
    "concurrently": "^7.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "creation": "PORT=3001 yarn workspace @frontend/creation start",
    "presentation": "PORT=3002 yarn workspace @frontend/presentation start",
    "response": "PORT=3003 yarn workspace @frontend/response start",
    "start": "concurrently --kill-others-on-fail \"PORT=3001 yarn creation\" \"PORT=3002 yarn presentation\" \"PORT=3003 yarn response\""
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
